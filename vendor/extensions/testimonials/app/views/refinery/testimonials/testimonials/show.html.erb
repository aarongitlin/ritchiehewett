<% content_for :body_content_title do %>
  <div id ="testi_title">
     <%= @testimonial.title %>
  </div>
<% end %>

<% content_for :body do %>
  <div class="row-fluid">
    <div id="testi_img">
      <%= image_fu @testimonial.photo, nil %>
    </div>
  </div>
  
 <div class="row-fluid">
    <div class="span8">
      <%=raw @testimonial.text %>
    </div>
    <div class="span3 offset1">
      <%=raw @testimonial.date.strftime('%B %Y')  %><br>
      <%=raw @testimonial.area %><br>
      <%=raw @testimonial.location %>
    </div>
 </div>
 
  <div class="row-fluid next-prev">
    <div class="span8">
      <%= link_to "Previous Testimonial", refinery.testimonials_testimonial_path(@testimonial.previous), :class => "previous" if !@testimonial.previous.nil? %>
      <%= link_to "Next Testimonial", refinery.testimonials_testimonial_path(@testimonial.next), :class =>"next" if !@testimonial.next.nil? %>
    </div>
  </div>
<% end %>

<% content_for :side_body do %>
  <%= render 'other_testimonials' %>
<% end %>

<%= render "/refinery/content_page" %>
